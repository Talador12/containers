{
  "name": "@cloudflare/containers",
  "version": "0.0.15",
  "description": "Helper class for container-enabled Durable Objects",
  "repository": {
    "type": "git",
    "url": "https://github.com/cloudflare/containers"
  },
  "scripts": {
    "build": "rm -rf dist && tsup src/index.ts src/lib/*.ts src/types/*.ts --outDir dist --external cloudflare:workers --dts --sourcemap --format esm",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx --config .eslintrc.js",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "keywords": [
    "containers",
    "durable objects",
    "durable-objects",
    "cloudflare"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.3",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.26.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.2",
    "tsup": "^8.0.2",
    "typescript": "^5.8.3",
    "@cloudflare/workers-types": "^4.20250403.0"
  }
}
